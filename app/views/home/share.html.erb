<div class="container">
    <a href="/new_share" class="">등록 </a>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>글번호</th>
                <th>글제목</th>
                <th>조회수</th>
                <th>등록자</th>
                <th>등록시간</th>
            </tr>
        </thead>
    
        <tbody>
            <% @posts.each do |p| %>
            <tr>
                <td><%= p.id %></td>
                <td><%= p.title %></td>
                <td><%= p.hit %></td>
                <td><%= p.user_id %></td>
                <td><%= p.created_at %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
<script>
    $(document).ready(function() {
    $('#example').DataTable();
} );
</script>
